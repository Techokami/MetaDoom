			}
		}
		goto Imp;
	Tier3:
		TNT1 A 0;
		TNT1 A 0 //A_JumpIf(CallACS("Spectre_SectorLight", 0, 0, 0) != 1, "LetsGetNightmarishVarietyPack");
		{
		if (level.PointInSector(self.pos.xy).GetLightLevel() < 128)
			{
				if (meta_developer)
						Console.printf("Spawners: ImpSpawner at %i x %i is ready for some darkness (%i)", self.pos.x, self.pos.y, level.PointInSector(self.pos.xy).GetLightLevel());
