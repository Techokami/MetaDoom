class PlasmaRifleSpawner : Actor replaces PlasmaRifle
{
	States
	{
	Spawn:
		TNT1 A 0;
		TNT1 A 0 A_JumpIf(meta_noalts_weapons == 1, "PlasmaRifle");
		TNT1 A 0 A_JumpIf(meta_contentlocust == 1, "VarietyPackLocust");
		TNT1 A 0 A_JumpIf(CallACS("Item_PlasmaRifle", 0, 0, 0) == 1, "PlasmaRifle");
		TNT1 A 0 A_JumpIf(CallACS("Item_PlasmaRifle", 0, 0, 0) == 2, "VarietyPack");
	VarietyPack:
		TNT1 A 0;
		TNT1 A 0 A_Jump(64,"Gauss", "Thunderbolt");
		TNT1 A 0 A_JumpIf(CallACS("Item_BFG9000", 0, 0, 0) == 2, "ArtifactChance");
		goto PlasmaRifle;
	VarietyPackLocust:
		TNT1 A 0;
		TNT1 A 0 A_Jump(64,"Gauss", "Thunderbolt");
		TNT1 A 0 A_Jump(32, "Artifactual");
		TNT1 A 0 A_JumpIf(CallACS("Item_BFG9000", 0, 0, 0) == 2, "ArtifactChance");
		goto PlasmaRifle;
	Gauss:
		TNT1 A 0 A_SpawnItemEx("MetaGaussCannonPickup",0,0,0,0,0,0,0,SXF_TRANSFERPOINTERS|SXF_TRANSFERAMBUSHFLAG|SXF_TRANSFERSPECIAL|SXF_NOCHECKPOSITION);
		stop;
	PlasmaRifle:
		TNT1 A 0 A_SpawnItemEx("MetaPlasmaRiflePickup",0,0,0,0,0,0,0,SXF_TRANSFERPOINTERS|SXF_TRANSFERAMBUSHFLAG|SXF_TRANSFERSPECIAL|SXF_NOCHECKPOSITION);
		stop;
	Thunderbolt:
		TNT1 A 0 A_SpawnItemEx("MetaLightningGunPickup",0,0,0,0,0,0,0,SXF_TRANSFERPOINTERS|SXF_TRANSFERAMBUSHFLAG|SXF_TRANSFERSPECIAL|SXF_NOCHECKPOSITION);
		stop;
	ArtifactChance:
		TNT1 A 0 A_JumpIf(CallACS("Item_Artifact", 0, 0, 0) == 2, "PlasmaRifle");
		TNT1 A 0 A_Jump(64, "Artifactual");
		goto PlasmaRifle;
	Artifactual:
		TNT1 A 0 A_SpawnItemEx("ArtifactPickup",0,0,0,random(4,16),random(4,16),0,random(0,360));
		goto PlasmaRifle;
	}
}

class BFGSpawner : Actor replaces BFG9000
{
	mixin LootSpawn;
	
	States
	{
	Spawn:
		TNT1 A 0;
		TNT1 A 0 A_JumpIf(meta_noalts_weapons == 1, "BFG9000");
		TNT1 A 0 A_JumpIf(meta_contentlocust == 1, "VarietyPack");
		TNT1 A 0 A_JumpIf(CallACS("Item_BFG9000", 0, 0, 0) == 1, "BFG9000");
		TNT1 A 0 A_JumpIf(CallACS("Item_BFG9000", 0, 0, 0) == 2, "VarietyPack");
	VarietyPack:
		TNT1 A 0;
		TNT1 A 0 A_Jump(128,"PrepareForUnmaker");
		goto BFG9000;
	PrepareForUnmaker:
		TNT1 A 0 A_JumpIf(CallACS("Item_Unmaker", 0, 0, 0) == 1, "Unmaker");
		TNT1 A 0 A_JumpIf(CallACS("Item_Unmaker", 0, 0, 0) == 2, "DemonKeySpawning");
		goto BFG9000;
	DemonKeySpawning:
		TNT1 A 0 A_SpawnItem("DemonKeySpawner");
		TNT1 A 0 A_Jump(128,"Unmaker");
		goto BFG9000;
	BFG9000:
		TNT1 A 0 
		{
			A_SpawnLoot("Cell2");
			A_SpawnLoot("Cell2");
			A_SpawnItemEx("MetaBFG9000Pickup",0,0,0,0,0,0,0,SXF_TRANSFERPOINTERS|SXF_TRANSFERAMBUSHFLAG|SXF_TRANSFERSPECIAL|SXF_NOCHECKPOSITION);
		}
		stop;
	Unmaker:
		TNT1 A 0 A_SpawnItemEx("MetaUnmakerPickup",0,0,0,0,0,0,0,SXF_TRANSFERPOINTERS|SXF_TRANSFERAMBUSHFLAG|SXF_TRANSFERSPECIAL|SXF_NOCHECKPOSITION);
		stop;
	}
}

